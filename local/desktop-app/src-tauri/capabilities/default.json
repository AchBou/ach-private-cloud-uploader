{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:allow-read",
    {
      "identifier": "fs:allow-read-file",
      "allow": [{ "path": "**" }]
    },
    "fs:allow-write",
    "fs:allow-watch",
    "dialog:default"
  ]
}
